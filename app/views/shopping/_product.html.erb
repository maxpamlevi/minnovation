<div class="product-item">
  <div class>
    <div class='product-image'>
      <img class="w-100" src="<%=product.link_img%>" alt="">
    </div>
    <div class="pt-1">
      
    </div>
    <%= link_to "/product/#{product.id}/#{product.name}", class: 'pt-1 link padding-left-10 padding-right-10' do %>
      <span>
        <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="6" cy="6" r="6" fill="<%=product.state_color%>" />
        </svg>
      </span>
      <span class='overflow-line'><%= product.name %></span>
    <% end %>
<!--    /brand/#{product.vehicle_make}-->
    <%= link_to "javascript:void(0)", class: 'pt-1 link padding-left-10 padding-right-10' do %>
      <span>
        <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M8.91507 1.83176C8.64946 1.56606 8.28918 1.41675 7.91349 1.41667H2.83332C2.4576 1.41667 2.09727 1.56593 1.83159 1.8316C1.56591 2.09728 1.41666 2.45762 1.41666 2.83334V7.91351C1.41674 8.2892 1.56604 8.64947 1.83174 8.91509L7.49841 14.5818C7.76407 14.8473 8.12434 14.9965 8.49999 14.9965C8.87564 14.9965 9.23591 14.8473 9.50157 14.5818L14.5817 9.50159C14.8473 9.23592 14.9965 8.87565 14.9965 8.5C14.9965 8.12436 14.8473 7.76409 14.5817 7.49842L8.91507 1.83176ZM4.95832 6.375C4.58251 6.37491 4.22212 6.22553 3.95644 5.95972C3.69077 5.69391 3.54156 5.33345 3.54166 4.95763C3.54175 4.58181 3.69113 4.22143 3.95694 3.95575C4.22275 3.69007 4.58321 3.54087 4.95903 3.54096C5.33485 3.54106 5.69524 3.69044 5.96091 3.95625C6.22659 4.22206 6.37579 4.58252 6.3757 4.95834C6.3756 5.33416 6.22622 5.69454 5.96041 5.96022C5.6946 6.2259 5.33414 6.3751 4.95832 6.375Z"
            fill="#E56353" />
        </svg>
      </span>
      <span class='overflow-line'>
        <%= product.vehicle_make %>
      </span>
    <% end %> 

    <div class="discount mt-1 padding-right-10">
        <% if product.discount > 0 %>
          <span class="text-right discount-price mr-2" style="text-align: right">
            <%= number_to_currency(product.price, precision: 0) %>
          </span>
          <div class="discount-task" style="padding-left: 10px">
            <span style='margin-left: 5px'>-<%=product.discount%>%</span>
          </div>
        <% end %>
    </div>

    
    <div class="rating-price pt-2 pb-2 padding-right-10">
      <div class="stars">
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star" alt="" srcset=""></div>
      </div>
      <p class="text-danger font-weight-bold price">
        <%= number_to_currency(product.price * (100 - product.discount) / 100, precision: 0) %>
      </p>
    </div>
    
    <div class="w-100 border-bottom" style="width: 93% !important; margin: 0 auto"></div>
    <%= link_to "javascript:void(0)", class: 'pt-1 link pt-2 pb-2 padding-left-10 padding-right-10' do %>
      <span class='logo'>
         <% if @store %>
            <img src="/assets/motorist" alt="">
        <% else %>
        <img src="<%= product.logo_img %>" alt="">
        <% end %>
      </span>
      <span class='overflow-line'>
        <% if @store %>
          Motorist
        <% else %>
          <%= product.vehicle_make %> Official
        <% end %>
      </span>
    <% end %>
  </div>
</div>