    <div class="w-100 mt-2 pl-2 pr-2">
      <div class="w-100 border-bottom"></div>
    </div>
    <%#= link_to "/brand/#{product.vehicle_make}", class: 'pt-1 link pt-2 pb-2 flex-center' do %>
      <div class="pt-1 link pt-2 pb-2 flex-center">
        <span class='logo'>
        <img src="<%= product.logo_img %>" alt="">
      </span>
        <span>
        <%= product.vehicle_make %> Official
      </span>
      </div>
    <%# end %>
  </div>
