<div class="product-item box-shadow radius-15">
  <div class>
    <div class='product-image'>
      <img class="w-100" src="<%= product.link_img %>" alt="">
    </div>

    <div class="rating-price pt-2 pb-2">
      <div class="stars">
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star_selected" alt="" srcset=""></div>
        <div class="star"><img src="/assets/star" alt="" srcset=""></div>
      </div>
      <div class="auction-price">
        <div class="auction-time" bg>
          <div class="icon ">
            <img src="/assets/carbon_time.png" alt="">
          </div>
          <span class="time pl-1 font-weight-bold"></span>
          <span><div data-role='countdown' data-hours='<%= auction.hour_auction%>>'></div></span>
        </div>
        <span class="font-weight-bold" style="background: #44C4A1"><%= number_to_currency(product.price * (100 - product.discount) / 100, precision: 0) %></span>
      </div>
    </div>

    <%#= link_to "#", class: 'pt-2 link padding-left-10' do %>
      <div class="pt-2 link padding-left-10">
        <span>
        <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="6" cy="6" r="6" fill="#00BE65" />
        </svg>
      </span>
        <span><%= product.name %></span>
      </div>

    <%# end %>

    <%#= link_to "#", class: 'pt-1 link padding-left-10' do %>
